 <div class="three columns workshop-section">

    <section>
      <h2>Details</h2>

      <div class="confinfo">
        <% if workshop.applications.status == "open" && show_apply %>
          <a href="apply.html" class="button">Apply now</a>
          <p><strong>Deadline</strong>: <%= workshop.applications.deadline %>.  Notification by <%= workshop.applications.notification %>.</p>
        <% elsif workshop.applications.status == "pre" %>
          <p><strong>Applications will open soon!</strong></p>
        <% elsif workshop.applications.status == "review" && show_apply %>
          <p>Applications are closed. Applicants will be notified by <%= workshop.applications.notification %>.</p>
        <% elsif workshop.applications.status == "notified" && show_apply %>
          <a href="apply.html" class="button">Join the waitlist</a>
          <p>Applicants have been notified. You may still join the waitlist.</p>
        <% elsif workshop.applications.status == "full" && show_apply %>
          <p><strong>The workshop is full and registration is closed.</strong></p>
        <% end %>
        <p><strong>Workshop cost</strong>: <%= workshop.cost %></p>
        <p>
          <strong>Venue</strong>: <a href="<%= workshop.venue_link %>" target="_blank"><%= workshop.venue %></a>
          <%= workshop.address %>
        </p>
      </div>

    </section>
    
    <section class="sponsors">
      <h2>Sponsors</h2>
      <div class="sponsor-list">
        <% for sponsor in workshop.sponsors %>
          <div class="sponsor">
            <a href="<%= sponsor.url %>"><%= image_tag sponsor.image, :class => 'sponsor-logo' %></a>
            <p><%= sponsor.role %></p>
          </div>
        <% end %>

      </div>
    </section>

</div>